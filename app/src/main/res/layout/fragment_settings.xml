<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:padding="16dp"
    android:paddingTop="?attr/actionBarSize">

    <TextView
        android:id="@+id/tv_currency_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default Currency"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinner_currency"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_currency_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_save_currency"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btn_save_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintTop_toBottomOf="@id/tv_currency_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btn_export"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Export Data"
        app:layout_constraintTop_toBottomOf="@id/spinner_currency"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_import"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Import Data"
        app:layout_constraintTop_toBottomOf="@id/btn_export"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/et_backup_json"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:hint="Backup JSON"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@id/btn_import"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btn_clear_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Clear All Data"
        app:layout_constraintTop_toBottomOf="@id/et_backup_json"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>